<?xml version="1.0" encoding="UTF-8" ?>
<verboice-service>
  <name>ICAPPR (HOST)</name>
  <steps>
    <step name="authenticatePin"
      display-name="Authenticate Patient Pin (HOST)"
      icon="medicalkit"
      type="callback"
      callback-url="HOST/ivr/authenticate">
      <settings>
        <variable name="pin" display-name="Patient pin (HOST)" type="string"/>
      </settings>
      <response type="variables">
        <variable name="result" display-name="Result (HOST)" type="string"/>
      </response>
    </step>
  </steps>
  <steps>
    <step name="sendAnswer"
      display-name="Send Patient Answer (HOST)"
      icon="medicalkit"
      type="callback"
      callback-url="HOST/answer">
      <settings>
        <variable name="answer" display-name="Answer (HOST)" type="numeric"/>
        <variable name="questionName" display-name="Question Name (HOST)" type="string"/>
      </settings>
      <response type="none"/>
    </step>
  </steps>
  <steps>
    <step name="sendConcern"
      display-name="Send Patient Concern (HOST)"
      icon="medicalkit"
      type="callback"
      callback-url="HOST/patientConcern">
      <settings>
        <variable name="answer" display-name="Concern Answer (HOST)" type="numeric"/>
        <variable name="concernType" display-name="Concern Type (HOST)" type="string"/>
      </settings>
      <response type="none"/>
  </steps>
</verboice-service>